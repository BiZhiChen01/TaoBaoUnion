<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/goods_cover"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="阿尔海南个人户输入适当无任何我去过微软雅黑不大好人"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/goods_off_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="4dp"
            android:text="@string/text_goods_off_price"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/shape_tag_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="券后价："
                android:textColor="@color/color_main"/>

            <TextView
                android:id="@+id/goods_after_off_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.8"
                android:textColor="@color/color_main"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/goods_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/text_goods_original_price"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/goods_sell_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/text_goods_sell_count"
                android:textColor="@color/gray"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>